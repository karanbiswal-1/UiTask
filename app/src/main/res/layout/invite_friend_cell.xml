<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="80dp">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_dp_friend"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_dp_friend"
        android:layout_marginTop="20dp"
        android:text="karan biswal"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_frindName"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_frindName"
        android:text="facebook"
        android:layout_toRightOf="@id/iv_dp_friend"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_from_cell"/>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/invite_button_bg"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:id="@+id/rl_invite_cell">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_add_grey"
            android:layout_centerVertical="true"
            android:id="@+id/iv_add_icon_invite_cell"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite"
            android:layout_toRightOf="@id/iv_add_icon_invite_cell"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="17dp"/>

    </RelativeLayout>


</RelativeLayout>